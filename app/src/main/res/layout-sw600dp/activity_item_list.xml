<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    tools:context="dapp.com.awok.awokdriversapp.Activities.ItemListActivity">

    <!--
    This layout is a two-pane layout for the Items
    master/detail flow.
    
    -->

    <fragment android:id="@+id/item_list"
        android:name="dapp.com.awok.awokdriversapp.Activities.ItemListFragment"
        android:layout_width="350dp" android:layout_height="fill_parent"
        tools:layout="@android:layout/list_content" />

    <FrameLayout android:id="@+id/item_detail_container" android:layout_width="match_parent"
        android:layout_height="fill_parent" />

</LinearLayout>
