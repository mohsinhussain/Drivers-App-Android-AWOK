<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRelativeLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >


    <TextView
        android:id="@+id/totalCostTextView"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="Total Paid Amount:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/totalCostEditText"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="8dp"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone|flagNoFullscreen"
        android:layout_toRightOf="@+id/totalCostTextView"
        android:hint="Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/currencyCostTextView"
        android:textSize="16sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_toRightOf="@+id/totalCostEditText"
        android:text="AED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <dev.dworks.libs.asignature.SignatureView
        android:id="@+id/signature"
        android:layout_below="@+id/totalCostEditText"
        android:layout_above="@+id/acceptButton"
        android:elevation="5dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:padding="8dp"
        android:text="ACCEPT"
        android:layout_margin="16dp"
        android:background="@color/green"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/editButton"
        android:layout_toLeftOf="@+id/refreshButton"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="@color/btn_bg"
        android:textColor="@color/white"
        android:text="EDIT PRICE"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/refreshButton"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="@color/btn_bg"
        android:textColor="@color/white"
        android:text="REFRESH CANVAS"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <!--<ImageView-->
        <!--android:id="@+id/image"-->
        <!--android:background="#aaa"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp" />-->
</RelativeLayout>