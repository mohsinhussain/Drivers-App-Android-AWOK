<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_marginTop="20dp"

    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content"
    android:id="@+id/hf">



<LinearLayout
    android:orientation="vertical"
    android:background="#CCCCCC"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <Button android:text="item" android:layout_width="fill_parent"
        android:background="#B591FF" android:textColor="#FFFFFF" android:textSize="20dp"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/b_item" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/b_name" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/b_quantity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:layout_marginLeft="20dp"
        android:background="#FFFFFF"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/b_price"

        android:layout_marginTop="10dp"/>
</LinearLayout>

    </LinearLayout>