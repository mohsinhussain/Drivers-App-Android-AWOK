        <com.github.clans.fab.FloatingActionButton
        android:id="@+id/addAttachmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/attachment"
        app:fab_size="mini"
        app:fab_colorNormal="#566da9"
        app:fab_colorPressed="#566da9"
        app:fab_colorRipple="#99FFFFFF"
        android:background="#fff"
        app:fab_label="ADD ATTACHMENTS" />



        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/changeStatusButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cha"
            app:fab_size="mini"
            app:fab_colorNormal="#ec8618"
            app:fab_colorPressed="#ec8618"
            app:fab_colorRipple="#99FFFFFF"
            android:background="#fff"
            app:fab_label="CHANGE STATUS" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/callCustomerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call_white"
            app:fab_size="mini"
            app:fab_colorNormal="#31a662"
            app:fab_colorPressed="#31a662"
