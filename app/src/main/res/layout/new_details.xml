<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelativeLayout"
    android:background="#fff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
        android:id="@+id/progress1"
        app:mlpb_show_arrow="true"
        app:mlpb_arrow_height="5dp"
        app:mlpb_arrow_width="10dp"
        android:layout_centerInParent="true"
        app:mlpb_progress_stoke_width="3dp"
        app:mlpb_progress_color="#566da9"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <ScrollView
        android:layout_above="@+id/footerLinearLayout"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:id="@+id/mainScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



        <LinearLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                >



                <Button
                    android:id="@+id/callLogButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="5dp"
                    android:text="CALL LOG"
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/call_white"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="ID"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/or_main"
                    />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="12sp"
                        android:text="ORDER DATE"
                        />

                    <TextView
                        android:id="@+id/orderDateValueTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:textSize="16sp"
                        android:text="ORDER DATE"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/bac"
                    android:src="@drawable/call_white"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                     />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="2dp"
                android:background="#fff"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Customer Name:"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:id="@+id/two" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:gravity="left"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:id="@+id/customerNameValueTextView" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Mobile/Phone:"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:id="@+id/twobh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:gravity="left"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:id="@+id/mobileValueTextView" />

                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:background="#bbb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Emirate:"
                                android:layout_weight="1"
                                android:gravity="left"

                                android:id="@+id/twocbhf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:gravity="left"
                                android:layout_weight="1"
                                android:id="@+id/emirateValueTextView" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Location:"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:id="@+id/twobjhf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:gravity="left"
                                android:layout_weight="1"
                                android:id="@+id/locationValueTextView" />


                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:background="#bbb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Address:"
                                android:layout_weight="1"
                                android:gravity="left"

                                android:id="@+id/twobhcvf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:gravity="left"
                                android:layout_weight="1"
                                android:id="@+id/addressValueTextView" />

                        </LinearLayout>
                    </RelativeLayout>


                    <View
                        android:background="#bbb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Total Price:"
                                android:layout_weight="1"
                                android:gravity="left"

                                android:id="@+id/twocbhf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:textColor="@color/red"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:id="@+id/totalPriceValueTextView" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Delivery Price:"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:id="@+id/twobjhf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:text="Small Text"
                                android:gravity="right"
                                android:layout_weight="1"
                                android:id="@+id/deliveryPriceValueTextView" />



                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
