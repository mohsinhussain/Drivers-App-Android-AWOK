<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"

    android:layout_height="match_parent" >





<ScrollView
    android:layout_width="fill_parent"

    android:layout_above="@+id/pay_lay_main"
    android:layout_height="match_parent">






<RelativeLayout  android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
android:id="@+id/r"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dapp.com.awok.dapp.Details"
    >








    <LinearLayout
        android:id="@+id/container"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="fill_parent"
android:layout_below="@+id/pay_method"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>





    <Button android:text="order_id" android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"     android:id="@+id/order_id"
        android:background="#FFFFFF"





        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button android:text="order_date" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/order_id" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/order_date" />




    <Button android:text="name" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/order_date" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/name" />





    <Button android:text="phone" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/name" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/phoneTextView" />









    <Button android:text="city" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/phoneTextView" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/city" />





    <Button android:text="area" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/city" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/area" />



    <Button android:text="street" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/area" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/street" />













    <Button android:text="building" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/street" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/building" />



    <Button android:text="delivery_time" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/building" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/delivery_time" />






    <Button android:text="pay_method" android:layout_width="fill_parent" android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/delivery_time" android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_height="wrap_content"     android:id="@+id/pay_method" />










</RelativeLayout>
</ScrollView>

<RelativeLayout


android:id="@+id/pay_lay_main"
android:layout_width="fill_parent"
android:layout_height="wrap_content"

android:layout_alignParentBottom="true"
    android:background="#B6B6B6">

<LinearLayout
    android:id="@+id/pay_lay"
    android:weightSum="2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    >



    <Button android:text="delivery_price" android:layout_width="fill_parent" android:layout_marginTop="20dp"
        android:background="#FFFFFF" android:layout_weight="1" android:layout_marginRight="2dp" android:layout_marginLeft="10dp"

        android:layout_height="wrap_content"     android:id="@+id/delivery_price" />

    <Button android:text="total_price" android:layout_width="fill_parent" android:layout_marginTop="20dp" android:layout_marginRight="10dp"
        android:background="#FFFFFF" android:layout_weight="1" android:layout_marginLeft="2dp"

        android:layout_height="wrap_content"     android:id="@+id/total_price" />

</LinearLayout>



<LinearLayout
    android:weightSum="2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:layout_below="@+id/pay_lay"
    >

    <Button android:text="CALL CUSTOMER" android:layout_width="fill_parent" android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:background="#5CD65C" android:layout_weight="1" android:layout_marginRight="2dp" android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#FFFFFF"
        android:layout_height="wrap_content"     android:id="@+id/call" />

    <Button android:text="DELIVERED" android:layout_width="fill_parent" android:layout_marginTop="5dp" android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FF9147" android:layout_weight="1" android:layout_marginLeft="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium" android:textColor="#FFFFFF"
        android:layout_height="wrap_content"     android:id="@+id/delivered" />

</LinearLayout>

</RelativeLayout>
    </RelativeLayout>